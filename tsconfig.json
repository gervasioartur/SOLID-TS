{
   "compilerOptions": {
      "lib": [
         "es5",
         "es6",
         "ES2021.String"
      ],
      "target": "es5",
      "module": "commonjs",
      "moduleResolution": "node",
      "outDir": "./dist",
      "rootDir": ".",
      "esModuleInterop": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "sourceMap": true
   }, 
   "include": [
      "src/**/*.ts"
   ]
}
